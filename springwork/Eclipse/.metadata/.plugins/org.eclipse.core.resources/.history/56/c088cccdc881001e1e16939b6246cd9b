//		model.addAttribute("addr",addr);
//		model.addAttribute("age",age+"세는 " + (age>20? "성인":"미성년자") + "입니다.");
//		return "result1";
//	}
	
	@PostMapping("/process2")
	public String process2(Model model, @RequestParam String message, @RequestParam String product) {
		return "result2";
	}
	
}
